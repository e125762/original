<% if current_user.joind?(group) %>
  <%= form_for(current_user.groups_users.find_by(group_id: group.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :group_id, group.id %>
    <%= f.submit 'グループを抜ける', class: 'btn btn-danger' %>
  <% end %>
<% else %>
  <%= form_for(current_user.groups_users.build) do |f| %>
    <%= hidden_field_tag :group_id, group.id %>
    <%= f.submit 'グループ参加', class: 'btn btn-primary' %>
  <% end %>
<% end %>
