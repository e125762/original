<% if current_user.joind?(group) %>
  <%= link_to "グループを抜ける", groups_user_path(current_user, group_id: group.id), method: :delete, remote: true, class: "btn btn-danger" %>
<% else %>
  <%= link_to "グループ参加", groups_users_path(current_user, group_id: group.id), method: :post, remote: true, class: "btn btn-primary" %>
<% end %>
